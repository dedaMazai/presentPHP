<?xml version="1.0"?>
<ruleset name="PioneerCustom">
 <description>Модифицированный PSR2 с увеличенной длиной строк</description>

<!-- Include the whole PSR2 standard -->
 <rule ref="PSR2"/>

 <rule ref="Generic.Files.LineLength">
  <properties>
   <property name="lineLimit" value="160"/>
   <property name="absoluteLineLimit" value="0"/>
  </properties>
 </rule>
</ruleset>